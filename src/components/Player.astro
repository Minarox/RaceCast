---
import loading from "@assets/loading.svg";

const { name } = Astro.props;
const loadingIcon: string = (loading as HTMLImageElement).src;
---

<div class="player" id={name}>
    <img src={loadingIcon} alt="Chargement de la vidÃ©o" >
    <video controls />
</div>

<style>
  .player {
      position: relative;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;

      > img {
          z-index: 1;
          pointer-events: none;
          position: absolute;
          width: 100px;
          height: 100px;
          opacity: 1;
          transition: opacity 0.3s ease-in-out;
      }

      > video {
          width: 100%;
          max-height: 100%;
          aspect-ratio: 16/9;
      }

      @media (max-width: 768px) {
          height: max-content;
      }
    }
</style>
