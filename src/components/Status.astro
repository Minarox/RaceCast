<div id="status" class="container orange-border">
    <p>Connexion en cours...</p>
</div>

<script>
    import { State } from "../types/state.ts";

    const div: HTMLElement = document.getElementById("status") as HTMLElement;
    const p: HTMLElement = div.querySelector("p") as HTMLElement;

    document.addEventListener("status", (event: any): void => {
        switch (event.detail) {
            case State.CONNECTING:
            case State.RECONNECTING:
                p.innerText = `${event.detail === State.CONNECTING ? "Connexion" : "Reconnexion"} en cours...`;
                div.classList.remove("green-border", "red-border", "hidden");
                div.classList.add("orange-border");
                break;

            case State.CONNECTED:
                p.innerText = "Connecté";
                div.classList.remove("red-border", "orange-border", "hidden");
                div.classList.add("green-border");
                setTimeout(() => div.classList.add("hidden"), 2700);
                break;

            case State.DISCONNECTED:
                p.innerText = "Déconnecté";
                div.classList.remove("green-border", "orange-border", "hidden");
                div.classList.add("red-border");
                break;
        }
    });
</script>

<style>
    div {
        z-index: 1000;
        position: absolute;
        top: 1rem;
        left: 50%;
        transform: translateX(-50%);
        font-size: 1.2em;
        font-weight: bold;
        text-align: center;
        padding: 0.8rem 2rem;
        transition: opacity 0.5s ease-in-out, top 0.5s ease-in-out;
    }

    .hidden {
        opacity: 0;
        top: -100px;
    }

    .green-border {
        box-shadow: inset 0 0 14px green;
    }

    .orange-border {
        animation: pulse-orange 2s linear infinite alternate;
    }

    .red-border {
        animation: pulse-red 2s linear infinite alternate;
    }

    @keyframes pulse-orange {
        from {
            box-shadow: inset 0 0 0 3px orange;
        }
        to {
            box-shadow: inset 0 0 14px 3px orange;
        }
    }

    @keyframes pulse-red {
        from {
            box-shadow: inset 0 0 0 3px #d20000;
        }
        to {
