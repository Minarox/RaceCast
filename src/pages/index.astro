---
import Layout from "@layouts/Layout.astro";
import Sidebar from "@layouts/Sidebar.astro";

import Fullscreen from "@components/Fullscreen.astro";
import Player from "@components/Player.astro";
import Status from "@components/Status.astro";
import Stage from "@components/Stage.astro";
import Map from "@components/Map.astro";
import Mpu from "@components/Mpu.astro";
import State from "@components/State.astro";
---

<Layout>
	<Status />
    <Fullscreen />
	<Player />

	<Sidebar>
		<Stage />
		<Map />
		<Mpu />
		<State />
	</Sidebar>
</Layout>

<style>
	body {
		margin: 0;
		width: 100vw;
		height: 100vh;
		position: relative;
		overflow: hidden;
	}
</style>
